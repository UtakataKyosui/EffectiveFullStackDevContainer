# EffectiveFullStackDevContainer Environment Variables
# Copy this file to .env and customize for your project

# ================================
# Database Configuration
# ================================
POSTGRES_DB=loco_app
POSTGRES_USER=loco
POSTGRES_PASSWORD=loco
DATABASE_URL=postgres://loco:loco@db:5432/loco_app

POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C

# For test database (optional)
DATABASE_TEST_URL=postgres://loco:loco@db:5432/loco_app_test

# ================================  
# Redis Configuration
# ================================
REDIS_URL=redis://redis:6379

# ================================
# SMTP Configuration (MailTutan)
# ================================
MAILER_ENABLE=true
SMTP_HOST=mailer
SMTP_PORT=1025
SMTP_SECURE=false

# Production SMTP settings (uncomment and configure for production)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ================================
# Application Configuration
# ================================
PORT=5150
HOST=http://localhost:5150
FRONTEND_URL=http://localhost:3000

# ================================
# Authentication Configuration  
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ================================
# Development Settings
# ================================
RUST_LOG=debug
RUST_BACKTRACE=1
CARGO_TARGET_DIR=/tmp/target
CARGO_INCREMENTAL=0

# ================================
# VSCode IPC Settings
# ================================
VSCODE_IPC_HOOK_CLI=

# ================================
# Optional: Additional Services
# ================================
# MINIO_ROOT_USER=minioadmin
# MINIO_ROOT_PASSWORD=minioadmin
# S3_BUCKET=uploads